<%- include('../partials/header') %>

<section id="show-page">
    <div>Year: </div>
    <div><%= car.year %></div>
    <div>Make: </div>
    <div><%= car.make %></div>
    <div>Model: </div>
    <div><%= car.model %></div>
    <div>Price: </div>
    <div><%= `$${car.price}` %></div>
    <div>Body Style: </div>
    <div><%= car.bodyStyle %></div>
    <div>Exterior: </div>
    <div><%= car.exterior %></div>
    <div>Interior: </div>
    <div><%= car.interior %></div>
    <div>Fuel Economy: </div>
    <div><%= car.fuelEconomy %></div>
    <div>Engine: </div>
    <div><%= car.engine %></div>
    <div>Transmission: </div>
    <div><%= car.transmission %></div>
    <div>Vehicle Condition: </div>
    <div><%= car.vehicleCondition %></div>
    <div>Available: </div>
    <div><%= car.available ? 'Yes' : 'No' %></div>
  </section>

  <a href="/cars/<%= car._id %>/edit">Edit Car</a>
    <td>
      <% if (user?._id.equals(car.user)) { %>
        <form action="/cars/<%= car._id %>?_method=DELETE" method="POST">
          <button type="submit">X</button>
        </form>
      <% } %>
    </td>

  <h3><%= car.car %></h3>


  <br><br><h2>Reviews</h2>
  <% if (user) { %>
<form id="add-review-form" method="POST"
  action="/cars/<%= car._id %>/reviews">
  <label>Review:</label>
  <textarea name="content"></textarea>
  <label>Rating:</label>
  <select name="rating">
    <option value="1">1</option>
    <option value="2">2</option>
    <option value="3">3</option>
    <option value="4">4</option>
    <option value="5" selected>5</option>
  </select>
  <input type="submit" value="Add Review">
</form>
<% } %>

<% if (car.reviews.length) { %>
  <table>
    <thead>
      <tr>
        <th>User</th>
        <th>Date</th>
        <th>Review</th>
        <th>Rating</th>
      </tr>
    </thead>
    <tbody>
      <% let total = 0 %>
      <% car.reviews.forEach(function(r) { %>
        <% total += r.rating %>
        <tr>
          <td class="review-user"><img alt="avatar" src="<%= r.userAvatar %>" referrerpolicy="no-referrer" ><%= r.userName %></td>
          <td><%= r.createdAt.toLocaleDateString() %></td>
          <td><%= r.content %></td>
          <td><%= r.rating %></td>
          <td>
            <% if (user?._id.equals(r.user)) { %>
              <form action="/reviews/<%= r._id %>?_method=DELETE" method="POST">
                <button type="submit">X</button>
              </form>
            <% } %>
          </td>
        </tr>
      <% }); %>
      <tr>
        <td colspan="5"></td>
        <td><strong><%= (total / car.reviews.length).toFixed(1) %></strong></td>
      </tr>
    </tbody>
  </table>
<% } else { %>
  <h5>No Reviews Yet</h5>
<% } %>

<%- include('../partials/footer') %>